# Example environment variables for TeamVitality API Gateway (BFF)

# Node environment (development, production, test)
NODE_ENV=development

# Port the service will run on
PORT=3001

# JWT session secret for signing cookies (fallback if KMS is not used, though KMS is preferred)
JWT_SESSION_SECRET=your-very-secret-key-for-local-dev-only
# JWT session expiration (e.g., 7d, 30d, 1h) - Corresponds to KMS JWT expiry
JWT_SESSION_EXPIRES_IN=7d
# JWT session max age in seconds for cookie (e.g., 2592000 for 30 days)
JWT_SESSION_MAX_AGE_SECONDS=604800 # 7 days

# Frontend URLs for redirects
FRONTEND_LOGIN_SUCCESS_REDIRECT_URL=http://localhost:3000/dashboard
FRONTEND_ERROR_REDIRECT_URL=http://localhost:3000/login-error

# Auth service base URL (where the OIDC provider logic resides)
AUTH_SERVICE_BASE_URL=http://localhost:3002/api

# KMS and JWT settings for signing and validating session tokens
KMS_PROJECT_ID=your-gcp-project-id
KMS_LOCATION_ID=your-kms-location
KMS_KEY_RING_ID=your-kms-key-ring
KMS_SIGNING_KEY_ID=your-kms-key-id
KMS_SIGNING_KEY_VERSION_ID=1
JWT_ISSUER=https://app.team-vitality.us/bff
JWT_AUDIENCE=https://app.team-vitality.us/web
JWT_ALGORITHM=RS256