{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Auth Service",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn", 
            "args": [
                "app.main:app",                                 
                "--host",
                "0.0.0.0",
                "--port",
                "3002",
                "--reload"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": true
        }
    ]
}